<html>

<head>
    <title>Student Dashboard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="assets/css/main.css" />
    <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
    <style>
            .active {
                font-weight: 900;
                color:#f56a6a !important;
            }
        </style>
</head>

<body>

    <div style="position: absolute; top: 15px; right: 15px;">
        <a href="#"><i class="fa fa-bell fa-2x fa-red" style="color:#f56a6a; margin-right: 20px;"></i></a>
        <a href="#"><i class="fa fa-sign-out fa-2x" style="color:#f56a6a; margin-right: 20px;"></i></a>
    </div>
    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">

                <!-- Content -->
                <section>
                    <header class="main">
                        <h1>Approved Application</h1>
                    </header>

                    <hr class="major" />

                    <table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Application Id</th>
                                <th>Date of Submission</th>
                                <th>Application Type</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < doc.applications.length ; i++) { %>
                                <% if(doc.applications[i]["status"] == "accepted"){ %>
                                    <tr>
                                        <td>
                                            <%= doc.applications[i].applicationId %>
                                        </td>
                                        <td>
                                            <%= doc.applications[i].dueDate %>
                                        </td>
                                        <td>
                                            <%= doc.applications[i].type %>
                                        </td>
                                        <td>
                                            <a href="application?id=<%= doc.applications[i].applicationId %>" target="_blank">
                                                <button class="btn btn-info">click here</button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }} %>
                        </tbody>
                    </table>


                </section>

            </div>
        </div>

        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">

                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>
                            <%= doc.name %>
                        </h2>
                    </header>
                    <ul>
                        <li><a href="/student">New Application</a></li>
                        <li><a href="/pending">Pending Applications</a></li>
                        <li><a href="/approved" class="active">Applications History</a></li>
                    </ul>
                </nav>

            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/skel.min.js"></script>
    <script src="assets/js/util.js"></script>
    <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
    <script src="assets/js/main.js"></script>

</body>

</html>